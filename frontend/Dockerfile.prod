# Använd en större Node image med mer förinstallerat
FROM node:18

WORKDIR /app

# Kopiera och installera dependencies
COPY package*.json ./
RUN npm install

# Kopiera source code
COPY . .

# Bygg applikationen
RUN npm run build

# Production stage med nginx
FROM nginx:alpine

# Kopiera nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Kopiera byggd app
COPY --from=0 /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]